<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="messages">
      <% messages.forEach(message => { %>
        <div class="message">
          <div class="messageHeading">
            <h2><%= message.user %></h2>
            <div><%= message.added %></div>
          </div>
          <div><%= message.text %></div>
        </div>
      <% }) %>
    </div>
    <a href="./new">Post New Message</a>
  </body>
</html>
